.workflowSearch {
	.search-menu {
		.from, to {
			width: 175px;
		}
		text-align: center;
		input, select {
			padding: 8px 12px;
			box-shadow: none;
		}
	}
	a.external {
		color: #a23636;
	}
	
	.limit {
		width: 100px;
		text-align: center;
		margin-right: 10px;
	}
	
	h1 {
		border-style: ${border/style} none ${border/style} none;
	}
	
	table {
		margin: 1rem auto;
	}
}

@media ${devices/phone} {
	.workflowSearch {
		.optional {
			left: 0;
		}
	}
}